<?php

declare(strict_types=1);

namespace Vendor;

class Foo
{
    public $bar;

    /** @var string */
    public $baz;

    /** @var array */
    public $qux;

    /** @var iterable */
    public $quux;

    /** @var ArrayObject */
    public $quuz;
}

