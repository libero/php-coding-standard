<?php

declare(strict_types=1);

namespace Vendor;

$foo = static        function   ( $bar  ,&$baz,  bool$qux, ? string  $quux    =null   ,  string...  $quuz   )use  ( &$foo)   :
void
{
};

$corge =
static
function
( $grault  ,$garply,
      bool$waldo, ? string  $fred    =null   )   use( $foo,&$corge
)
:void
