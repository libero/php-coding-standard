---DESCRIPTION---
Closures must not have unnecessary whitespace
---CONTENTS---
<?php

declare(strict_types=1);

namespace Vendor;

/**
 * @param resource $baz
 * @param resource $qux
 */
$foo = function   ( $bar  ,&$baz,  bool$qux, ? string  $quux    =null   ,  string...$quuz   )use  ( &$foo)   :
void
{
};

/**
 * @param resource $grault
 * @param resource $garply
 */
$corge = function
( $grault  ,$garply,
      bool$waldo, ? string  $fred    =null   )   use( $foo,&$corge
)
:void
{
};

---FIXED---
<?php

declare(strict_types=1);

namespace Vendor;

/**
 * @param resource $bar
 * @param resource $baz
 */
$foo = function ($bar, &$baz, bool $qux, ?string $quux = null, string ...$quuz) use (&$foo) : void {
};

/**
 * @param resource $grault
 * @param resource $garply
 */
$corge = function (
    $grault,
    $garply,
    bool $waldo,
    ?string $fred = null
) use (
    $foo,
    &$corge
) : void {
};

