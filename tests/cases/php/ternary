---DESCRIPTION---
Ternary expressions should be used
---CONTENTS---
<?php

declare(strict_types=1);

$foo = function ($bar) : string {
    if ($bar) {
        return $bar;
    } else {
        return 'baz';
    }
};

$qux = function ($quux) : string {
    if ($quux) {
        return 'quuz';
    } else {
        return 'corge';
    }
};

---FIXED---
<?php

declare(strict_types=1);

$foo = function ($bar) : string {
    return $bar ?: 'baz';
};

$qux = function ($quux) : string {
    return $quux ? 'quuz' : 'corge';
};

---
